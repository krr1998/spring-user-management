pipeline {
    agent any
    
    stages {
        stage('Fetch Code') {
            steps {
                git branch: 'master', url: 'https://github.com/krr1998/spring-user-management.git'
            }
        }
        stage('Code Analysis') {
            environment {
                scannerHome = tool 'SonarQube Scanner' // Ensure 'SonarQube Scanner' is configured in Jenkins
            }
            steps {
                script {
                    withSonarQubeEnv('SonarQube') { // Ensure 'SonarQube' matches your Jenkins SonarQube configuration name
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=java-assingment \
                            -Dsonar.projectName=java-assingment \
                            -Dsonar.projectVersion=1.0 \
                            -Dsonar.qualitygate.wait=true \
                            -Dsonar.sources=.
                        """
                    }
                }
            }
        }
    }
}
